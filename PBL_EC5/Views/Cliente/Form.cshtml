@model ClienteViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form {
        border: 1px solid #00a1a1;
        border-radius: 15px;
    }

    .form-group {
        display: flex;
        justify-content: space-between; /* labels à esquerda e inputs à direita */
        align-items: center;
        margin-bottom: 12px; /* espaçamento vertical entre grupos */
    }

        .form-group label {
            width: 35%; /* largura das labels */
            font-weight: bold;
            padding-right: 10px; /* espaço à direita para separar visualmente */
            text-align: right; /* alinha labels à direita para estética */
        }

        .form-group input {
            width: 65%; /* largura dos inputs */
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    .btn-submit {
        width: 100px;
        margin-left: auto; /* botão alinhado à direita */
        padding: 8px;
        border: none;
        border-radius: 5px;
        background-color: #00a1a1;
        color: white;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #008181;
        }

</style>

<div class="text-start">

    <h2>Cadastro de Cliente</h2>
    <form class="form p-4" action="Salvar" method="post">
        <div class="form-group">
            <label for="Id" class="control-label">Id</label>
            @if (Model.Id == 0)
            {
                <input type="text" Name="Id" value="" hidden disabled />
            }
            else
            {
                <input type="text" Name="Id" value="@Model.Id" hidden />
            }
        </div>

        <div class="form-group">
            <label for="Id_Usuario" class="control-label">Usuário</label>
            <input type="number" Name="Id_Usuario" value="@Model.Id_Usuario" />
        </div>

        <div class="form-group">
            <label for="Razao_Social" class="control-label">Razão Social</label>
            <input type="text" Name="Razao_Social" value="@Model.Razao_Social" required maxlength="255" />
        </div>

        <div class="form-group">
            <label for="CNPJ" class="control-label">CNPJ</label>
            <input type="text" Name="CNPJ" value="@Model.CNPJ" required maxlength="14" />
        </div>

        <div class="form-group">
            <label for="CEP" class="control-label">CEP</label>
            <input type="text" Name="CEP" value="@Model.CEP" maxlength="9" />
        </div>

        <div class="form-group">
            <label for="Rua" class="control-label">Rua</label>
            <input type="text" Name="Rua" value="@Model.Rua" maxlength="255" />
        </div>

        <div class="form-group">
            <label for="Numero" class="control-label">Número</label>
            <input type="number" Name="Numero" value="@Model.Numero" />
        </div>

        <div class="form-group">
            <label for="Ativo" class="control-label">Ativo</label>
            <select Name="Ativo" required>
                <option value="1" >Sim</option>
                <option value="0" >Não</option>
            </select>
        </div>

        <div class="d-flex justify-content-center align-items-center mt-5">
            <a href="/Cliente/Index">Cancelar</a>
            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input class="btn btn-success" type="submit" value="Salvar" />
        </div>
    </form>
</div>