@model EstufaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form {
        border: 1px solid #00a1a1;
        border-radius: 15px;
    }

    .form-group {
        display: flex;
        justify-content: space-between; /* labels à esquerda e inputs à direita */
        align-items: center;
        margin-bottom: 12px; /* espaçamento vertical entre grupos */
    }

        .form-group label {
            width: 35%; /* largura das labels */
            font-weight: bold;
            padding-right: 10px; /* espaço à direita para separar visualmente */
            text-align: right; /* alinha labels à direita para estética */
        }

        .form-group input {
            width: 65%; /* largura dos inputs */
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    .btn-submit {
        width: 100px;
        margin-left: auto; /* botão alinhado à direita */
        padding: 8px;
        border: none;
        border-radius: 5px;
        background-color: #00a1a1;
        color: white;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #008181;
        }

</style>

<div class="text-start">

    <h2>Cadastro de Estufa</h2>
    <form class="form p-4" action="Salvar" method="post">
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
        <div class="form-group">
            <label for="Id" class="control-label">Id</label>
            @if (Model.Id == 0)
            {
                <input type="text" Name="Id" value="" hidden disabled />
            }
            else
            {
                <input type="text" Name="Id" value="@Model.Id" hidden />
            }
        </div>

        <div class="form-group">
            <label for="IdCliente" class="control-label">Empresa</label>
            <select asp-for="Id_Cliente" asp-items="ViewBag.Clientes" class="form-control"> </select>
            <span asp-validation-for="Id_Cliente" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label for="Numero_Serie" class="control-label">Número de Série</label>
            <input type="text" Name="Numero_Serie" value="@Model.Numero_Serie" required maxlength="255" />
        </div>

        <div class="form-group">
            <label for="Marca" class="control-label">Marca</label>
            <input type="text" Name="Marca" value="@Model.Marca" required maxlength="255" />
        </div>

        <div class="form-group">
            <label for="Potencia" class="control-label">Potência (W)</label>
            <input type="number" Name="Potencia" value="@Model.Potencia" required step="0.01" />
        </div>

        <div class="form-group">
            <label for="Tensao" class="control-label">Tensão (V)</label>
            <input type="number" Name="Tensao" value="@Model.Tensao" required />
        </div>

        <div class="d-flex justify-content-center align-items-center mt-5">
            <a href="/Estufa/Index">Cancelar</a>
            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input class="btn btn-success" type="submit" value="Salvar" />
        </div>
    </form>
</div>