    @using Microsoft.AspNetCore.Http
@using PBL_EC5.Controllers
@using System.Globalization
@inject IHttpContextAccessor HttpContextAccessor
@model EstufaViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdm = HelperControllers.VerificaAdm(HttpContextAccessor.HttpContext.Session);
}

<link rel="stylesheet" href="~/css/cadastro.css" />
<div>
    <h2 class="mt-3 text-center">Cadastro de Estufa</h2>
    <form class="form py-2 px-4" asp-action="Salvar" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

        <div class="formLogin paddingCadastro mx-auto w-75">
            <div class="row">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="IdCliente" class="control-label" style="font-weight:600">Cliente responsável</label>
                        <select asp-for="Id_Cliente" asp-items="ViewBag.Clientes" class="input_form form-control"></select>
                        <span asp-validation-for="Id_Cliente" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Numero_Serie" class="control-label" style="font-weight:600">Número de Série</label>
                        <input class="input_form form-control" type="text" name="Numero_Serie" value="@Model.Numero_Serie" required maxlength="255" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Marca" class="control-label" style="font-weight:600">Marca</label>
                        <input class="input_form form-control" type="text" name="Marca" value="@Model.Marca" required maxlength="255" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Potencia" class="control-label" style="font-weight:600">Potência (W)</label>
                        <input class="input_form form-control" type="number" name="Potencia" value="@(Model.Potencia.ToString(CultureInfo.InvariantCulture))" required step="0.01" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Tensao" class="control-label" style="font-weight:600">Tensão (V)</label>
                        <input class="input_form form-control" type="number" name="Tensao" value="@Model.Tensao" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Ativo" class="control-label" style="font-weight:600">Ativo</label>
                        <select class="input_form form-control" asp-for="Ativo" required>
                            <option value="0">Não</option>
                            <option value="1">Sim</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center mt-4 mb-3">
                <a href="/Estufa/Index">Cancelar</a>
                <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input class="btn_salvar btn btn-success" type="submit" value="Salvar" />
            </div>
        </div>
    </form>
</div>
