@model MotorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form {
        border: 1px solid #00a1a1;
        border-radius: 15px;
    }

    .form-group {
        display: flex;
        justify-content: space-between; /* labels à esquerda e inputs à direita */
        align-items: center;
        margin-bottom: 12px; /* espaçamento vertical entre grupos */
    }

        .form-group label {
            width: 35%; /* largura das labels */
            font-weight: bold;
            padding-right: 10px; /* espaço à direita para separar visualmente */
            text-align: right; /* alinha labels à direita para estética */
        }

        .form-group input {
            width: 65%; /* largura dos inputs */
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    .btn-submit {
        width: 100px;
        margin-left: auto; /* botão alinhado à direita */
        padding: 8px;
        border: none;
        border-radius: 5px;
        background-color: #00a1a1;
        color: white;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #008181;
        }

</style>

<div class="text-start">

    <h2>Cadastro de Usuário</h2>
    <form class="form p-4" action="Salvar" method="post">
        <div class="form-group">
            <label for="Id" class="control-label">Id</label>
            @if (Model.Id == 0)
            {
                <input type="text" Name="Id" value="" hidden disabled />
            }
            else
            {
                <input type="text" Name="Id" value="@Model.Id" hidden />
            }
        </div>

        <div class="form-group">
            <label for="Nome" class="control-label">Nome</label>
            <input type="text" Name="Nome" value="@Model.Nome" required />
        </div>

        <div class="form-group">
            <label for="Tipo" class="control-label">Tipo</label>
            <input type="text" Name="Tipo" value="@Model.Tipo" required />
        </div>

        <div class="form-group">
            <label for="Status" class="control-label">Status</label>
            <input type="text" Name="Status" value="@Model.Status" required />
        </div>

        <div class="form-group">
            <label for="Descricao" class="control-label">Descricao</label>
            <input type="text" Name="Descricao" value="@Model.Descricao" required />
        </div>

        <div class="form-group">
            <label for="DataAtualizacao" class="control-label">Data Atualizacao</label>
            <input type="date" Name="DataAtualizacao" value="@Model.DataAtualizacao" required />
        </div>

        <div class="form-group">
            <label for="IdEstufa" class="control-label">Estufa</label>
            <input type="text" Name="IdEstufa" value="@Model.IdEstufa" required />
        </div>

        <div class="d-flex justify-content-center align-items-center mt-5">
            <a href="/Estufa/Index">Cancelar</a>
            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input class="btn btn-success" type="submit" value="Salvar" />
        </div>
    </form>
</div>
